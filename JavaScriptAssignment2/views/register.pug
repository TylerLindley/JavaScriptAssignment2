extends layout

block content
            
            include header.pug

            //Page will let the user create an account and store it to the database when it is completed in part 2.
            h1 Register an Account!
            h2 Would you like to create an account to list items on our site?
             form(method='post' action='/register')
                div
                    label Username
                    input(name='username' required placeholder='Username')
                div
                    label Password
                    input(name='password' require placeholder='Password' type=password)
                div
                input(type='submit' value='Create Account')
            include footer.pug